<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  
  <connectionStrings>
    <add name="Database" connectionString="Server=WIN-SHK45N0FMF6;Database=Corona;Integrated Security=True" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <appSettings>
    <add key="GitRepo" value="https://github.com/CSSEGISandData/COVID-19.git"/>
    <add key="LocalPath" value="C:/temp/corona/data"/>
    <add key="AdminUsers" value="benedikt.schmidt;laura.arrigoni;corona.app"/>
    <add key="SvgCompressed" value="true"/>
  </appSettings>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
      <target name="consoleTarget" 
              xsi:type="ColoredConsole"
              layout="${message} ${exception:format=tostring}" />
      <target name="fileTarget" 
              xsi:type="File"
              archiveAboveSize="10485760"
              maxArchiveFiles="50"
              archiveFileName="log/log.{##}.log"
              archiveNumbering="Sequence"
              fileName="log/log.log"
              keepFileOpen="true"
              layout="${longdate} ${message} ${exception:format=tostring}" />
      <target name="log2consoleviewer" xsi:type="Chainsaw" address="udp://127.0.0.1:7071"/>
    </targets>

    <rules>
        <logger name="*" minlevel="Info" writeTo="consoleTarget" />
        <logger name="*" minlevel="Debug" writeTo="fileTarget" />
        <logger name="*" minlevel="Trace" writeTo="log2consoleviewer" />
    </rules>
  </nlog>
        
</configuration>